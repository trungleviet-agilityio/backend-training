{
  "name": "blog-engine",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json",
    "test:e2e:auth": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json auth-integration.e2e-spec.ts",
    "test:e2e:auth:profile": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json auth-profile.e2e-spec.ts",
    "test:e2e:auth:all": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json --testPathPattern=\"auth-(integration|profile).e2e-spec.ts\"",
    "test:e2e:blog": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json blog-auth.e2e-spec.ts",
    "test:e2e:user": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json user-auth.e2e-spec.ts",
    "test:e2e:protected": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json --testPathPattern=\"(blog|user)-auth.e2e-spec.ts\"",
    "test:e2e:all-auth": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json --testPathPattern=\"auth.*\\.e2e-spec\\.ts\"",
    "test:e2e:auth-old": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json auth.e2e-spec.ts",
    "test:e2e:watch": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json --watch",
    "test:e2e:coverage": "npm run db:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json --coverage",
    "test:e2e:clean": "npm run docker:down && npm run test:e2e",
    "test:e2e:auth:clean": "npm run docker:down && npm run test:e2e:auth",
    "db:reset:test": "./scripts/db-reset-test.sh",
    "test:e2e:reset": "npm run db:test && npm run db:reset:test && ./scripts/wait-for-db.sh && jest --config ./test/jest-e2e.json",
    "docker:dev": "docker compose up -d postgres-dev redis",
    "docker:test": "docker compose up -d postgres-test",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "db:dev": "docker compose up -d postgres-dev && echo 'Development database started on port 5434'",
    "db:test": "docker compose up -d postgres-test && echo 'Test database started on port 5435'",
    "db:pgadmin": "docker compose up -d pgadmin && echo 'PgAdmin started on http://localhost:8080'"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^21.1.7",
    "@types/passport-local": "^1.0.38",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dompurify": "^3.2.6",
    "jsdom": "^26.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
